<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings">

        <ListPreference
            app:key="decimal_acc"
            app:title="@string/decimal_title"
            app:entryValues="@array/decimal_acc_values"
            app:entries="@array/decimal_acc_entries"
            app:defaultValue="2"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="display_back"
            app:title="@string/color_title"
            app:entryValues="@array/back_col_values"
            app:entries="@array/back_col_entries"
            app:defaultValue="white"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="limit"
            app:title="@string/limit_title" />

    </PreferenceCategory>
</PreferenceScreen>